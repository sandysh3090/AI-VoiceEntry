{
  "manifest_version": 3,
  "name": "Visitor Voice Entry System",
  "version": "1.0.0",
  "description": "Voice-based visitor entry system with history tracking",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Visitor Voice Entry"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["app.js", "index.html"],
      "matches": ["<all_urls>"]
    }
  ]
} 